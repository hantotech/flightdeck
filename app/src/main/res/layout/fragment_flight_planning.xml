<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.flightplanning.FlightPlanningFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Your Flight"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick flight planning for ATC practice"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Route Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœˆï¸ Route"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Departure Airport -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/departureInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/departureInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="KPAO - Palo Alto Airport"
                            android:inputType="textCapCharacters"
                            android:maxLength="4"
                            tools:text="KPAO" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Route Summary (shown when both airports selected) -->
                    <LinearLayout
                        android:id="@+id/routeSummaryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@color/background"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†“"
                            android:textSize="20sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/routeSummaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Direct Â· 31nm Â· 15min"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginTop="4dp"
                            tools:text="Direct Â· 31nm Â· 15min" />

                    </LinearLayout>

                    <!-- Waypoints Section (Premium Feature) -->
                    <LinearLayout
                        android:id="@+id/waypointsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <!-- Premium Lock Banner -->
                        <LinearLayout
                            android:id="@+id/waypointPremiumBanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/primary_light"
                            android:padding="12dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”’"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Want to add waypoints?"
                                android:textSize="14sp"
                                android:textColor="@color/text_on_primary" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/unlockWaypointsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock Premium"
                                android:textSize="12sp"
                                style="@style/Widget.MaterialComponents.Button.TextButton" />

                        </LinearLayout>

                        <!-- Waypoints Container (Premium Users Only) -->
                        <LinearLayout
                            android:id="@+id/waypointsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone" />

                        <!-- Add Waypoint Button (Premium Users Only) -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addWaypointButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Add Waypoint"
                            android:visibility="gone"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Arrival Airport -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/arrivalInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/arrivalInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="KSQL - San Carlos Airport"
                            android:inputType="textCapCharacters"
                            android:maxLength="4"
                            tools:text="KSQL" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Aircraft Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›©ï¸ Aircraft"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/aircraftSpinnerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/aircraftSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select aircraft"
                            android:inputType="none"
                            tools:text="Cessna 172 Skyhawk" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Flight Metrics (Auto-calculated) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metricsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Flight Metrics"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Distance"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/distanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31 nm"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="31 nm" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Est. Flight Time"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/flightTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="15 min" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fuel Required"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/fuelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5 gal"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            tools:text="2.5 gal" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weather Information -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weatherCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¤ï¸ Weather"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Departure Weather -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure METAR"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/departureMetarText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="12dp"
                        tools:text="KPAO 121753Z 30008KT 10SM FEW015 18/12 A3012" />

                    <!-- Arrival Weather -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival METAR"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/arrivalMetarText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        tools:text="KSQL 121753Z 32010KT 10SM SCT020 17/11 A3013" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI Flight Advice -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/aiAdviceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/primary_light"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ AI Flight Advice"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_on_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/aiAdviceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Excellent VFR conditions for this short hop. Wind favors runway 31 at departure..."
                        android:textSize="14sp"
                        android:textColor="@color/text_on_primary"
                        android:layout_marginBottom="8dp"
                        tools:text="Excellent VFR conditions for this short hop. Wind favors runway 31 at departure..." />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/detailedAdviceButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Detailed Analysis"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save as Favorite -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveAsFavoriteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â­ Save as Favorite"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Start ATC Practice Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startAtcButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start ATC Practice"
                android:textSize="16sp"
                android:paddingVertical="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
